<div class="user-nav">
  <span class="user-email">
    <%= current_user.email %>
  </span>
  <%= link_to "退出登录", destroy_user_session_path, method: :delete %>
</div>

<h2>待办事项</h2>

<%= link_to "添加任务", new_todo_list_path, class: "button radius", id: "add-todo"%>

<%= div_for(@todo_lists) do |todo| %>
  <%= form_for(todo) do |f| %>
    <%= f.check_box :completed %>

    <span class="todo-content <%= "#{"completed" if todo.completed}" %>"> 
      <%= todo.content -%>
      <%# truncate(todo.content,length: 25) %>
    </span>
   
    <%= f.submit "保存", class: "button med" %>
    <%= link_to '删除', todo, method: :delete,class: "button med alert" %>
  <% end %> <!-- form_for -->
<% end %> <!-- div_for -->


